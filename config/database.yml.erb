#
# PRODUCTION
#
production:
  adapter: <%= adapter_name %>
  <%- if db_type == 'mysql' %>
  encoding: utf8
  reconnect: false
  <%- else %>
  encoding: unicode
  <%- end %>
  database: <%= app_name %>_production
  pool: 10
  username: git
  password: "secure password"
  # host: localhost
  # socket: /tmp/<%= db_type %>.sock

#
# Development specific
#
development:
  adapter: <%= adapter_name %>
  <%- if db_type == 'mysql' %>
  encoding: utf8
  reconnect: false
  username: root
  <%- else %>
  encoding: unicode
  username: postgres
  <%- end %>
  database: <%= app_name %>_development
  pool: 5
  password: "secure password"
  # socket: /tmp/<%= db_type %>.sock

<%- if db_type == 'postgresql' %>
#
# Staging specific
#
staging:
  adapter: postgresql
  encoding: unicode
  database: <%= app_name %>_staging
  pool: 5
  username: postgres
  password:
  # socket: /tmp/postgresql.sock
<%- end %>

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test: &test
  adapter: <%= adapter_name %>
  <%- if db_type == 'mysql' %>
  encoding: utf8
  reconnect: false
  username: root
  <%- else %>
  encoding: unicode
  username: postgres
  <%- end %>
  database: <%= app_name %>_test
  pool: 5
  password:
  # socket: /tmp/<%= db_type %>.sock
