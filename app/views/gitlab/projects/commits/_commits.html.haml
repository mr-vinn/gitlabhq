- @commits.group_by { |c| c.committed_date.to_date }.sort.reverse.each do |day, commits|
  .row.commits-row
    .col-md-2
      %h4
        %i.icon-calendar
        %span= day.stamp("28 Aug, 2010")
      %p= pluralize(commits.count, 'commit')
    .col-md-10
      %ul.bordered-list
        = render partial: 'commit', collection: commits, locals: { project: @project }
  %hr.lists-separator
