!!! 5
%html{ lang: "en"}
  = render "layouts/gitlab/head", title: @project.name_with_namespace
  %body{class: "#{app_theme} project", :'data-page' => body_data_page, :'data-project-id' => @project.id }
    = render "layouts/gitlab/broadcast"
    = render "layouts/gitlab/head_panel", title: project_title(@project)
    = render "layouts/gitlab/init_auto_complete"
    = render "layouts/gitlab/flash"
    - if can?(current_user, :download_code, @project)
      = render 'gitlab/shared/no_ssh'

    %nav.main-nav.navbar-collapse.collapse
      .container= render 'layouts/gitlab/nav/project'

    .container
      .content
        .row
          .col-md-2
            = render "gitlab/projects/settings_nav"
          .col-md-10
            = yield
